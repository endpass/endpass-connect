{
  "name": "@endpass/connect",
  "version": "0.14.0-beta",
  "main": "./dist/endpass-connect.min.js",
  "module": "./dist/endpass-connect.esm.js",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endpass/endpass-connect.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "author": "Endpass, Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/endpass/endpass-connect/issues"
  },
  "homepage": "https://github.com/endpass/endpass-connect",
  "scripts": {
    "dev": "rollup -c -w",
    "build:dev": "rollup -c",
    "build": "rimraf ./dist && npm run build:lib",
    "build:lib": "NODE_ENV=production rollup -c",
    "test": "jest",
    "format": "prettier --write './src/**/*.{js,json}' && eslint ./src/**/*.{js} --fix",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "deploy:demo": "node ./demo/scripts/deploy.js"
  },
  "lint-staged": {
    "./src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "release",
    "prepare": [
      {
        "path": "@semantic-release/changelog"
      },
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  },
  "publishConfig": {
    "tag": "beta"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "web3-providers-http": "1.0.0-beta.37"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/parser": "^7.3.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/runtime": "^7.3.1",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "regenerator-runtime": "^0.13.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.4",
    "semantic-release": "^15.13.3"
  }
}

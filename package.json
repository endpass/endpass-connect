  "scripts": {
    "build": "rimraf ./dist && npm run build:app && npm run build:lib",
    "dev:app": "vue-cli-service serve ./packages/app/src/main.js",
    "build:app": "vue-cli-service --no-clean build ./packages/app/src/main.js",
    "dev:lib": "webpack --watch --mode=development",
    "build:lib": "webpack --mode=production",
    "unit": "vue-cli-service test:unit",
    "unit:watch": "vue-cli-service test:unit --watch",
    "format":
      "prettier --write 'packages/**/*.{js,vue,json}' && eslint packages/**/*.{js,vue} --fix"
  },
  "lint-staged": {
    "./packages/**/*.{js,vue,json}": ["prettier --write", "git add"],
    "./dist/lib/*.js": ["git add"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build:lib && lint-staged"
    }
  },
  "dependencies": {
    "bs58check": "^2.1.2",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-wallet": "^0.6.2",
    "keythereum": "^1.0.4",
    "lodash": "^4.17.11",
    "reset.css": "^2.0.2",
    "vue": "^2.5.17",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1",
    "web3": "1.0.0-beta.33",
    "web3-dapp": "npm:web3@0.19"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-unit-jest": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "postcss-nested": "^4.1.0",
    "rimraf": "^2.6.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  }
